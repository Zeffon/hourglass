{
	"manifest_version": 3,
	"name": "沙漏",
	"description": "高效安排任务",
	"version": "0.0.1",
	"browser_action": {
		"default_title": "沙漏",
		"default_icon": "assets/logo.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"webRequestBlocking",
		"notifications",
		"tabs",
		"webRequest",
		"http://*/",
		"https://*/",
		"<all_urls>",
		"storage",
		"activeTab"
	],
	"background": {
		"scripts": ["js/background.js"]
	},
	"icons": {
		"16": "assets/logo.png",
		"48": "assets/logo.png",
		"128": "assets/logo.png"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"css": [
				"css/content.css"
			],
			"js": [
				"js/content.js"
			],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": ["fonts/*", "inject.js"]
}